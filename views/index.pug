extends layout

block header
  .top-bar
    .top-bar-left
      ul.dropdown.menu(data-dropdown-menu)
        li.menu-title
          h4 #{title}
    .top-bar-right
      span.label(title="IP Address") {{headData.clientIP}}
      span.label(title="HostName") {{headData.hostname}}

block content
  div
    h2 {{greet}}

block footer
  div: h4 Footer

block scripts
  script(type='module', src='/javascripts/index.js')
